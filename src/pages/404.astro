---
// 404.astro
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Page Not Found';
const description = 'The page you are looking for does not exist or has been moved.';
---

<BaseLayout title={title} description={description}>
  <div class="min-h-[60vh] flex items-center justify-center text-center px-4 py-16">
    <div class="max-w-2xl mx-auto">
      <div class="text-9xl font-bold text-blue-600 mb-4">404</div>
      <h1 class="text-4xl font-bold mb-6">Oops! Page Not Found</h1>
      <p class="text-xl text-gray-600 mb-8">
        We're sorry, but the page you're looking for doesn't exist or has been moved.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a 
          href="/" 
          class="inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 transition-colors"
        >
          <i class="fas fa-home mr-2"></i>
          Return to Homepage
        </a>
        <a 
          href="/contact" 
          class="inline-flex items-center justify-center px-6 py-3 border border-blue-600 text-blue-600 font-medium rounded-md hover:bg-blue-50 transition-colors"
        >
          <i class="fas fa-headset mr-2"></i>
          Contact Support
        </a>
      </div>
      <div class="mt-12 border-t pt-8">
        <h2 class="text-xl font-semibold mb-4">Popular Routes</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
          <a href="/adelaide-to-sydney" class="block p-4 bg-white rounded-lg shadow hover:shadow-md transition-shadow">
            Adelaide to Sydney
          </a>
          <a href="/melbourne-to-brisbane" class="block p-4 bg-white rounded-lg shadow hover:shadow-md transition-shadow">
            Melbourne to Brisbane
          </a>
          <a href="/sydney-to-melbourne" class="block p-4 bg-white rounded-lg shadow hover:shadow-md transition-shadow">
            Sydney to Melbourne
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
