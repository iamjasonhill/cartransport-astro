---
import MainLayout from '../layouts/MainLayout.astro';
import Section from '../components/Section.astro';

const title = 'Australia\'s Trusted Car Transport Specialists';
const description = 'Safe, reliable, and affordable car transport services across Australia. Get a free quote today!';

// Preload critical resources
const preloadImages = [
  '/images/hero-placeholder.svg',
  // Add other critical images here
];

// Critical CSS for hero section
const heroCriticalCSS = `
  .hero-content {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease-out forwards;
  }
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
`;
---

<!-- Preload critical resources and add preconnect hints -->
<link rel="preconnect" href="https://vehicles.movingagain.com.au" />
<link rel="dns-prefetch" href="https://vehicles.movingagain.com.au" />
{preloadImages.map((src) => (
  <link 
    rel="preload" 
    as="image" 
    href={src} 
    fetchpriority="high"
    imagesrcset={`${src} 1x, ${src.replace('.svg', '@2x.svg')} 2x`}
  />
))}

<style is:inline>{heroCriticalCSS}</style>

<MainLayout {title} {description}>
  <!-- Hero Section with optimized SVG background -->
  <Section name="Hero" class="relative bg-gradient-to-r from-blue-600 to-blue-800 text-white py-20 md:py-32 overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src="/images/hero-placeholder.svg" 
        alt="" 
        class="w-full h-full object-cover"
        fetchpriority="high"
        decoding="async"
        loading="eager"
        width="1920"
        height="1080"
        style="object-position: center center;"
      />
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center hero-content">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight" 
            style="will-change: transform, opacity;"
            fetchpriority="high">
          Professional Car Transport Services Across Australia
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-blue-100 max-w-2xl mx-auto">
          Safe, reliable, and affordable vehicle transportation with door-to-door service.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a 
            href="https://vehicles.movingagain.com.au/quote/multi-step?mtm_campaign=Standard_Vehicle_Quote&mtm_kwd=MACT" 
            class="bg-white text-blue-700 hover:bg-blue-50 px-8 py-4 rounded-md font-bold text-lg transition-colors text-center"
          >
            Standard Car Transport Quote
          </a>
          <a 
            href="https://vehicles.movingagain.com.au/quote-types?mtm_campaign=Non_Standard_Vehicle_Quote&mtm_kwd=MACT" 
            class="bg-transparent border-2 border-white text-white hover:bg-white/10 px-8 py-4 rounded-md font-bold text-lg transition-colors text-center"
          >
            Non-Standard Vehicle Quote
          </a>
        </div>
      </div>
    </div>
  </Section>

  <!-- Why Choose Us -->
  <Section name="Features" class="py-16 bg-gradient-to-br from-gray-50 to-white">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="inline-block text-blue-600 font-semibold mb-3">WHY CHOOSE US</span>
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Australia's Most Reliable Car Transport Service</h2>
        <div class="w-24 h-1 bg-blue-600 mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <!-- Feature 1 -->
        <div class="group bg-white p-8 rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-blue-100">
          <div class="w-16 h-16 bg-blue-50 rounded-xl flex items-center justify-center mb-6 mx-auto group-hover:bg-blue-100 group-hover:scale-110 transition-all duration-300">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3 text-center text-gray-900">Competitive Pricing</h3>
          <p class="text-gray-600 text-center leading-relaxed">
            Multiple quote options available on all routes in Australia with transparent, competitive pricing.
          </p>
        </div>
        
        <!-- Feature 2 -->
        <div class="group bg-white p-8 rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-blue-100">
          <div class="w-16 h-16 bg-blue-50 rounded-xl flex items-center justify-center mb-6 mx-auto group-hover:bg-blue-100 group-hover:scale-110 transition-all duration-300">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3 text-center text-gray-900">On Time, Every Time</h3>
          <p class="text-gray-600 text-center leading-relaxed">
            We understand the importance of punctuality when it comes to your vehicle's delivery. Our reliable service ensures your car arrives when promised.
          </p>
        </div>
        
        <!-- Feature 3 -->
        <div class="group bg-white p-8 rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-blue-100">
          <div class="w-16 h-16 bg-blue-50 rounded-xl flex items-center justify-center mb-6 mx-auto group-hover:bg-blue-100 group-hover:scale-110 transition-all duration-300">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3 text-center text-gray-900">No Hidden Fees</h3>
          <p class="text-gray-600 text-center leading-relaxed">
            Transparent pricing with no surprises. The price you're quoted is the price you pay, with all costs clearly outlined upfront.
          </p>
        </div>
      </div>
    </div>
  </Section>

  <!-- Popular Routes -->
  <Section name="Popular Routes" class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Popular Transport Routes</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          We provide reliable car transport services between all major Australian cities and regional areas.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Route 1 -->
        <a href="/sydney-to-melbourne" class="group block bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <div class="h-48 bg-gray-200 relative overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent z-10"></div>
            <div class="w-full h-full bg-gradient-to-br from-blue-600 to-blue-800 flex items-center justify-center text-white text-lg font-medium">
              Sydney to Melbourne
            </div>
            <h3 class="absolute bottom-0 left-0 right-0 text-white text-xl font-bold p-4 z-20">
              Sydney to Melbourne
            </h3>
          </div>
          <div class="p-4">
            <p class="text-gray-600">From $599</p>
            <div class="flex items-center text-blue-600 mt-2">
              <span>View Details</span>
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </div>
        </a>
        
        <!-- Route 2 -->
        <a href="/brisbane-to-sydney" class="group block bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <div class="h-48 bg-gray-200 relative overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent z-10"></div>
            <div class="w-full h-full bg-gradient-to-br from-blue-600 to-blue-800 flex items-center justify-center text-white text-lg font-medium">
              Brisbane to Sydney
            </div>
            <h3 class="absolute bottom-0 left-0 right-0 text-white text-xl font-bold p-4 z-20">
              Brisbane to Sydney
            </h3>
          </div>
          <div class="p-4">
            <p class="text-gray-600">From $699</p>
            <div class="flex items-center text-blue-600 mt-2">
              <span>View Details</span>
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </div>
        </a>
        
        <!-- Route 3 -->
        <a href="/canberra-to-melbourne" class="group block bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <div class="h-48 bg-gray-200 relative overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent z-10"></div>
            <div class="w-full h-full bg-gradient-to-br from-blue-600 to-blue-800 flex items-center justify-center text-white text-lg font-medium">
              Canberra to Melbourne
            </div>
            <h3 class="absolute bottom-0 left-0 right-0 text-white text-xl font-bold p-4 z-20">
              Canberra to Melbourne
            </h3>
          </div>
          <div class="p-4">
            <p class="text-gray-600">From $499</p>
            <div class="flex items-center text-blue-600 mt-2">
              <span>View Details</span>
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </div>
        </a>
      </div>
      
      <div class="text-center mt-10">
        <a href="/areas" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-md transition-colors">
          View All Routes
        </a>
      </div>
    </div>
  </Section>

  <!-- How It Works -->
  <Section name="How It Works" class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">How It Works</h2>
        <div class="w-24 h-1 bg-blue-600 mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <!-- Step 1 -->
        <div class="text-center">
          <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4 relative">
            <span class="text-3xl font-bold text-blue-600">1</span>
          </div>
          <h3 class="text-xl font-bold mb-2">Get a Free Quote</h3>
          <p class="text-gray-600">
            Fill out our simple online form or call us for an instant quote.
          </p>
        </div>
        
        <!-- Step 2 -->
        <div class="text-center">
          <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4 relative">
            <span class="text-3xl font-bold text-blue-600">2</span>
          </div>
          <h3 class="text-xl font-bold mb-2">Book Your Transport</h3>
          <p class="text-gray-600">
            Choose your preferred date and confirm your booking with a small deposit.
          </p>
        </div>
        
        <!-- Step 3 -->
        <div class="text-center">
          <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4 relative">
            <span class="text-3xl font-bold text-blue-600">3</span>
          </div>
          <h3 class="text-xl font-bold mb-2">We Deliver</h3>
          <p class="text-gray-600">
            We collect and deliver your vehicle safely to its destination.
          </p>
        </div>
      </div>
    </div>
  </Section>

  <!-- CTA Section -->
  <Section name="Call to Action" class="py-16 bg-blue-700 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Move Your Vehicle?</h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto text-blue-100">
        Get a free, no-obligation quote today and experience the Moving Again difference.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4 max-w-3xl mx-auto">
        <a 
          href="https://vehicles.movingagain.com.au/quote/multi-step?mtm_campaign=Standard_Vehicle_Quote&mtm_kwd=MACT" 
          class="bg-white text-blue-700 hover:bg-blue-50 px-6 py-4 rounded-md font-bold text-lg transition-colors text-center flex-1"
        >
          Standard Car Transport Quote
        </a>
        <a 
          href="https://vehicles.movingagain.com.au/quote-types?mtm_campaign=Non_Standard_Vehicle_Quote&mtm_kwd=MACT" 
          class="bg-transparent border-2 border-white text-white hover:bg-white/10 px-6 py-4 rounded-md font-bold text-lg transition-colors text-center flex-1"
        >
          Non-Standard Vehicle Quote
        </a>
      </div>
    </div>
  </Section>
</MainLayout>
