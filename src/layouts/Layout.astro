---
// src/layouts/Layout.astro
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Professional car transport services across Australia' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <!-- Primary Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | Moving Again Car Transport</title>
    
    <!-- Canonical URL -->
    <link rel="canonical" href={new URL(Astro.url.pathname, 'https://movingagain.com.au').toString()} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={new URL(Astro.url.pathname, 'https://movingagain.com.au').toString()} />
    <meta property="og:title" content={`${title} | Moving Again Car Transport`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://movingagain.com.au/images/og-image.jpg" />
    <meta property="og:site_name" content="Moving Again Car Transport" />
    <meta property="og:locale" content="en_AU" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={new URL(Astro.url.pathname, 'https://movingagain.com.au').toString()} />
    <meta name="twitter:title" content={`${title} | Moving Again Car Transport`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://movingagain.com.au/images/twitter-card.jpg" />
    
    <!-- Additional Meta Tags -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Moving Again Car Transport" />
    <meta name="theme-color" content="#1e40af" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.ico" sizes="32x32" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    
    <!-- Preload critical assets -->
    <link rel="preload" href="/images/logo.png" as="image" />
    
    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Preload critical fonts -->
    <link 
      href="https://fonts.googleapis.com/css2?family=Arvo:wght@400;700&family=Roboto:wght@300;400;500;700&display=swap" 
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link 
        href="https://fonts.googleapis.com/css2?family=Arvo:wght@400;700&family=Roboto:wght@300;400;500;700&display=swap" 
        rel="stylesheet"
      />
    </noscript>
    
    <!-- Schema.org structured data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "AutoTransport",
      "@id": "https://movingagain.com.au/#transport",
      "name": "Moving Again Car Transport",
      "image": "https://movingagain.com.au/images/logo.png",
      "description": "Professional car transport services across Australia. Safe, reliable, and affordable vehicle transportation.",
      "url": "https://movingagain.com.au",
      "telephone": "+610721432557",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "3/31 Expansion Street",
        "addressLocality": "Molendinar",
        "addressRegion": "QLD",
        "postalCode": "4214",
        "addressCountry": "AU"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": "-27.9672",
        "longitude": "153.3556"
      },
      "openingHoursSpecification": [
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday"
          ],
          "opens": "08:00",
          "closes": "17:00"
        }
      ],
      "sameAs": [
        "https://www.facebook.com/movingagainau/",
        "https://www.instagram.com/movingagainau/"
      ],
      "priceRange": "$$",
      "areaServed": {
        "@type": "Country",
        "name": "Australia"
      }
    }
    </script>
    
    <title>{title} | Moving Again Car Transport</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.ico" />
    
    <!-- Global CSS -->
    <link rel="stylesheet" href="/styles/global.css" />
    
    <!-- Preload critical CSS -->
    <style>
      /* Critical CSS can be inlined here */
      .logo { height: 4rem; }
      .nav-link { position: relative; }
      .nav-link:hover { opacity: 0.8; }
      .nav-link.active { font-weight: 700; }
    </style>
  </head>

  <body class="min-h-screen flex flex-col">
    <header class="bg-primary text-white sticky top-0 z-50 shadow-md">
      <div class="container mx-auto px-4 py-3">
        <div class="flex justify-between items-center">
          <!-- Logo -->
          <a href="/" class="flex items-center space-x-2">
            <img 
              src="/images/logo.png" 
              alt="Moving Again Car Transport" 
              class="h-16 w-auto"
              width="64"
              height="64"
              loading="eager"
            />
            <span class="text-xl font-bold font-serif">Moving Again</span>
          </a>
          
          <!-- Desktop Navigation -->
          <nav class="hidden md:flex space-x-6 items-center">
            <a href="/" class="nav-link hover:text-white/90 transition-colors">Home</a>
            <a href="https://movingagain.com.au/contact-moving-again/" class="nav-link hover:text-white/90 transition-colors">Contact Us</a>
            <a 
              href="/get-quote" 
              class="bg-white text-primary px-4 py-2 rounded-md font-bold hover:bg-gray-100 transition-colors"
            >
              Get a Quote
            </a>
          </nav>
          
          <!-- Mobile menu button -->
          <button id="mobile-menu-button" class="md:hidden text-white p-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
        
        <!-- Mobile Menu -->
        <div id="mobile-menu" class="md:hidden hidden py-4">
          <div class="flex flex-col space-y-3">
            <a href="/" class="block py-2 hover:bg-white/10 px-2 rounded">Home</a>
            <a href="https://movingagain.com.au/contact-moving-again/" class="block py-2 hover:bg-white/10 px-2 rounded">Contact Us</a>
            <a href="/get-quote" class="block bg-white text-primary text-center py-2 rounded-md font-bold mt-2">
              Get a Quote
            </a>
          </div>
        </div>
      </div>
    </header>

    <main class="flex-grow">
      <slot />
    </main>

    <footer class="bg-gray-900 text-white py-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="md:col-span-2">
            <div class="flex items-center space-x-2 mb-4">
              <img 
                src="/images/logo.png" 
                alt="Moving Again" 
                class="h-12 w-auto"
                width="48"
                height="48"
                loading="lazy"
              />
              <span class="text-xl font-bold font-serif">Moving Again</span>
            </div>
            <p class="text-gray-300 mb-4">
              Professional car transport services across Australia. Safe, reliable, and affordable vehicle transportation.
            </p>
            <div class="flex space-x-4">
              <!-- Social links can be added here -->
            </div>
          </div>
          
          <div>
            <h3 class="text-lg font-bold mb-4">Quick Links</h3>
            <ul class="space-y-2">
              <li><a href="/" class="text-gray-300 hover:text-white transition-colors">Home</a></li>
              <li><a href="https://movingagain.com.au/contact-moving-again/" class="text-gray-300 hover:text-white transition-colors">Contact Us</a></li>
            </ul>
          </div>
          
          <div>
            <h3 class="text-lg font-bold mb-4">Contact Us</h3>
            <address class="not-italic text-gray-300 space-y-2">
              <p class="flex items-start">
                <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                3 / 31 Expansion Street<br>
                Molendinar<br>
                Gold Coast<br>
                Queensland 4216
              </p>
              <p class="flex items-center">
                <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <a href="tel:+610721432557" class="hover:text-white transition-colors">07 2143 2557</a>
              </p>

            </address>
          </div>
        </div>
        
        <div class="border-t border-gray-800 mt-8 pt-6 text-center text-gray-400">
          <p>&copy; {new Date().getFullYear()} Moving Again Car Transport. All rights reserved.</p>
        </div>
      </div>
    </footer>
    
    <!-- Mobile menu script -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (mobileMenuButton && mobileMenu) {
          mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
          });
        }
        
        // Close mobile menu when clicking outside
        document.addEventListener('click', (e) => {
          if (!mobileMenuButton.contains(e.target) && !mobileMenu.contains(e.target)) {
            mobileMenu.classList.add('hidden');
          }
        });
      });
    </script>
  </body>
</html>
