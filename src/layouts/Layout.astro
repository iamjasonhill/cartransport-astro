---
// src/layouts/Layout.astro
import ContactInfo from '../components/ContactInfo.astro';
import CriticalCSS from '../components/CriticalCSS.astro';
import NonCriticalCSS from '../components/NonCriticalCSS.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Professional car transport services across Australia' } = Astro.props;

// Generate paths to CSS files
const globalCSS = '/styles/global.css';
const routesCSS = '/styles/routes.css';
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <!-- Primary Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | Moving Again Car Transport</title>
    
    <!-- Canonical URL -->
    <link rel="canonical" href={new URL(Astro.url.pathname, 'https://cartransport.movingagain.com.au').toString()} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={new URL(Astro.url.pathname, 'https://cartransport.movingagain.com.au').toString()} />
    <meta property="og:title" content={`${title} | Moving Again Car Transport`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://cartransport.movingagain.com.au/images/optimized/og-image-1200w.jpg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/jpeg" />
    <link rel="preload" as="image" href="/images/optimized/og-image-1200w.jpg" imagesrcset="/images/optimized/og-image-1200w.jpg 1x, /images/optimized/og-image-1200w.jpg 2x" />
    <meta property="og:site_name" content="Moving Again Car Transport" />
    <meta property="og:locale" content="en_AU" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={new URL(Astro.url.pathname, 'https://cartransport.movingagain.com.au').toString()} />
    <meta name="twitter:title" content={`${title} | Moving Again Car Transport`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://cartransport.movingagain.com.au/images/optimized/twitter-card-1200w.jpg" />
    <meta name="twitter:image:width" content="1200" />
    <meta name="twitter:image:height" content="628" />
    <meta name="twitter:image:alt" content="Moving Again Car Transport - Professional Vehicle Transportation Services" />
    <link rel="preload" as="image" href="/images/optimized/twitter-card-1200w.jpg" imagesrcset="/images/optimized/twitter-card-1200w.jpg 1x, /images/optimized/twitter-card-1200w.jpg 2x" />
    
    <!-- Additional Meta Tags -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Moving Again Car Transport" />
    <meta name="theme-color" content="#1e40af" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.ico" sizes="32x32" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    
    <!-- Critical CSS (inlined) -->
    <CriticalCSS />
    
    <!-- Preload optimized logo -->
    <link 
      rel="preload" 
      href="/images/optimized/logo-64w.webp" 
      as="image" 
      type="image/webp"
      imagesrcset="/images/optimized/logo-64w.webp 1x, /images/optimized/logo-128w.webp 2x"
    />
    
    <!-- Preload non-critical CSS -->
    <link rel="preload" href={globalCSS} as="style" />
    <link rel="preload" href={routesCSS} as="style" />
    
    <!-- Load non-critical CSS asynchronously -->
    <NonCriticalCSS href={globalCSS} />
    <NonCriticalCSS href={routesCSS} />
    
    <!-- Preconnect to external domains for any remaining external resources -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Self-hosted Arvo font with font-display: swap -->
    <style>
      @font-face {
        font-family: 'Arvo';
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: local('Arvo'),
             url('/fonts/arvo-v22-latin-regular.woff2') format('woff2'),
             url('/fonts/arvo-v22-latin-regular.woff') format('woff');
        unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
      }
      
      @font-face {
        font-family: 'Arvo';
        font-style: normal;
        font-weight: 700;
        font-display: swap;
        src: local('Arvo Bold'),
             url('/fonts/arvo-v22-latin-700.woff2') format('woff2'),
             url('/fonts/arvo-v22-latin-700.woff') format('woff');
        unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
      }
    </style>
    
    <!-- Schema.org structured data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "AutoTransport",
      "@id": "https://movingagain.com.au/#transport",
      "name": "Moving Again Car Transport",
      "image": "https://movingagain.com.au/images/optimized/logo-64w.png",
      "description": "Professional car transport services across Australia. Safe, reliable, and affordable vehicle transportation.",
      "url": "https://movingagain.com.au",
      "telephone": "+610721432557",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "3/31 Expansion Street",
        "addressLocality": "Molendinar",
        "addressRegion": "QLD",
        "postalCode": "4214",
        "addressCountry": "AU"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": "-27.9672",
        "longitude": "153.3556"
      },
      "openingHoursSpecification": [
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday"
          ],
          "opens": "08:00",
          "closes": "17:00"
        }
      ],
      "sameAs": [
        "https://www.facebook.com/movingagainau/",
        "https://www.instagram.com/movingagainau/"
      ],
      "priceRange": "$$",
      "areaServed": {
        "@type": "Country",
        "name": "Australia"
      }
    }
    </script>
    
    <!-- Global CSS -->
    <link rel="stylesheet" href="/styles/global.css" />
    
    <!-- Preload critical CSS -->
    <style>
      /* Critical CSS can be inlined here */
      .logo { height: 4rem; }
      .nav-link { position: relative; }
      .nav-link:hover { opacity: 0.8; }
      .nav-link.active { font-weight: 700; }
    </style>
  </head>

  <body class="min-h-screen flex flex-col font-['Arvo',serif] text-gray-800 bg-gray-100">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <style>
      /* Custom styles to match original site */
      .entry-content {
        line-height: 1.8;
        color: #333;
      }
      .entry-content h2 {
        font-size: 2rem;
        font-weight: 700;
        margin: 2rem 0 1.5rem;
        color: #1e40af;
      }
      .entry-content h3 {
        font-size: 1.5rem;
        font-weight: 600;
        margin: 1.8rem 0 1.2rem;
        color: #1e40af;
      }
      .entry-content h4 {
        font-size: 1.2rem;
        font-weight: 600;
        margin: 1.5rem 0 0.8rem;
        color: #1e40af;
      }
      .entry-content p {
        margin-bottom: 1.2rem;
      }
      .entry-content ul, .entry-content ol {
        margin: 1.2rem 0;
        padding-left: 2rem;
      }
      .entry-content li {
        margin-bottom: 0.5rem;
      }
      .faq-item {
        background: #fff;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      }
      .cta-section {
        background: #1e40af;
        color: white;
        padding: 2rem;
        border-radius: 8px;
        margin: 2rem 0;
        text-align: center;
      }
      .cta-section .button {
        display: inline-block;
        background: #ff6b00;
        color: white;
        padding: 0.8rem 1.8rem;
        border-radius: 4px;
        font-weight: 600;
        text-decoration: none;
        margin-top: 1rem;
        transition: background-color 0.3s;
      }
      .cta-section .button:hover {
        background: #e05a00;
      }
      @media (max-width: 768px) {
        .entry-content {
          padding: 0 1rem;
        }
      }
    </style>

    <!-- Header -->
    <header class="bg-[#101827] text-white shadow-md">
      <div class="container mx-auto px-4">
        <div class="flex justify-between items-center py-4">
          <!-- Logo -->
          <a href="/" class="flex items-center space-x-2">
            <picture>
              <source 
                srcSet="/images/optimized/logo-64w.webp 1x, /images/optimized/logo-128w.webp 2x" 
                type="image/webp" 
              />
              <source 
                srcSet="/images/optimized/logo-64w.png 1x, /images/optimized/logo-128w.png 2x" 
                type="image/png" 
              />
              <img 
                src="/images/optimized/logo-64w.png" 
                alt="Moving Again" 
                class="h-12 w-auto" 
                width="48" 
                height="48"
                loading="eager"
                decoding="async"
              />
            </picture>
            <div>
              <div class="text-lg font-bold text-primary">Moving Again</div>
              <div class="text-sm text-gray-600">Car Transport</div>
            </div>
          </a>
          
          <!-- Desktop Navigation -->
          <nav class="hidden md:flex space-x-6 items-center">
            <a href="/" class="nav-link text-gray-700 hover:text-primary transition-colors">Home</a>
            <a href="https://movingagain.com.au/contact-moving-again/" class="nav-link text-gray-700 hover:text-primary transition-colors">Contact Us</a>
            <a href="/get-quote" class="bg-primary text-white px-4 py-2 rounded-md hover:bg-primary-dark transition-colors">Get a Quote</a>
          </nav>
          
          <!-- Mobile menu button -->
          <button 
            id="mobile-menu-button" 
            class="md:hidden flex items-center p-2"
            aria-label="Toggle menu"
            aria-expanded="false"
            aria-controls="mobile-menu"
            aria-haspopup="true"
          >
            <span class="sr-only">Open main menu</span>
            <svg 
              class="w-6 h-6" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d="M4 6h16M4 12h16m-7 6h7"
              ></path>
            </svg>
          </button>
        </div>
      </div>
      
      <!-- Mobile Navigation -->
      <div 
        id="mobile-menu" 
        class="md:hidden bg-white shadow-lg absolute w-full z-10 hidden"
        role="menu"
        aria-labelledby="mobile-menu-button"
        aria-orientation="vertical"
      >
        <div class="px-4 py-2 space-y-1">
          <a 
            href="/" 
            class="block py-2 hover:bg-white/10 px-2 rounded"
            role="menuitem"
            tabindex="-1"
          >
            Home
          </a>
          <a 
            href="https://movingagain.com.au/contact-moving-again/" 
            class="block py-2 hover:bg-white/10 px-2 rounded"
            role="menuitem"
            tabindex="-1"
          >
            Contact Us
          </a>
          <a 
            href="/get-quote" 
            class="block bg-primary text-white text-center py-2 rounded-md font-bold mt-2"
            role="menuitem"
            tabindex="-1"
          >
            Get a Quote
          </a>
        </div>
      </div>
    </header>
    
    <!-- Main Content -->
    <main class="flex-grow">
      <slot />
    </main>
    
    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="md:col-span-2">
            <div class="flex items-center space-x-2 mb-4">
              <img src="/images/logo-white.png" alt="Moving Again Car Transport" class="h-12" />
              <div>
                <div class="text-xl font-bold">Moving Again</div>
                <div class="text-sm">Car Transport</div>
              </div>
            </div>
            <p class="text-gray-400">
              Professional car transport services across Australia. Safe, reliable, and affordable vehicle transportation.
            </p>
          </div>
          
          <div>
            <h3 class="text-lg font-bold mb-4">Quick Links</h3>
            <ul class="space-y-2">
              <li><a href="/" class="text-gray-400 hover:text-white">Home</a></li>
              <li><a href="/services" class="text-gray-400 hover:text-white">Services</a></li>
              <li><a href="/pricing" class="text-gray-400 hover:text-white">Pricing</a></li>
              <li><a href="/about" class="text-gray-400 hover:text-white">About Us</a></li>
              <li><a href="/contact" class="text-gray-400 hover:text-white">Contact</a></li>
            </ul>
          </div>
          
          <div>
            <h3 class="text-lg font-bold mb-4">Contact Us</h3>
            <address class="not-italic text-gray-400">
              <ContactInfo />
            </address>
          </div>
        </div>
        
        <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400 text-sm">
          <p>&copy; {new Date().getFullYear()} Moving Again Car Transport. All rights reserved.</p>
        </div>
      </div>
    </footer>
    
    <!-- Mobile menu script -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        mobileMenuButton.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
        });
      });
    </script>
    <header class="bg-primary text-white sticky top-0 z-50 shadow-md">
      <div class="container mx-auto px-4 py-3">
        <div class="flex justify-between items-center">
          <!-- Logo -->
          <a href="/" class="flex items-center space-x-2">
            <img 
              src="/images/logo.png" 
              alt="Moving Again Car Transport" 
              class="h-16 w-auto"
              width="64"
              height="64"
              loading="eager"
            />
            <span class="text-xl font-bold font-serif">Moving Again</span>
          </a>
          
          <!-- Desktop Navigation -->
          <nav class="hidden md:flex space-x-6 items-center">
            <a href="/" class="nav-link hover:text-white/90 transition-colors">Home</a>
            <a href="https://movingagain.com.au/contact-moving-again/" class="nav-link hover:text-white/90 transition-colors">Contact Us</a>
            <a 
              href="/get-quote" 
              class="bg-white text-primary px-4 py-2 rounded-md font-bold hover:bg-gray-100 transition-colors"
            >
              Get a Quote
            </a>
          </nav>
          
          <!-- Mobile menu button -->
          <button id="mobile-menu-button" class="md:hidden text-white p-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
        
        <!-- Mobile Menu -->
        <div id="mobile-menu" class="md:hidden hidden py-4">
          <div class="flex flex-col space-y-3">
            <a href="/" class="block py-2 hover:bg-white/10 px-2 rounded">Home</a>
            <a href="https://movingagain.com.au/contact-moving-again/" class="block py-2 hover:bg-white/10 px-2 rounded">Contact Us</a>
            <a href="/get-quote" class="block bg-white text-primary text-center py-2 rounded-md font-bold mt-2">
              Get a Quote
            </a>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="md:col-span-2">
            <div class="flex items-center space-x-2 mb-4">
              <img 
                src="/images/optimized/logo-64w.png" 
                srcSet="/images/optimized/logo-64w.png 1x, /images/optimized/logo-128w.png 2x"
                alt="Moving Again" 
                class="h-12 w-auto"
                width="48"
                height="48"
                loading="lazy"
                decoding="async"
              />
              <span class="text-xl font-bold font-serif">Moving Again</span>
            </div>
            <p class="text-gray-300 mb-4">
              Professional car transport services across Australia. Safe, reliable, and affordable vehicle transportation.
            </p>
            <div class="flex space-x-4">
              <!-- Social links can be added here -->
            </div>
          </div>
          
          <div>
            <h3 class="text-lg font-bold mb-4">Quick Links</h3>
            <ul class="space-y-2">
              <li><a href="/" class="text-gray-300 hover:text-white transition-colors">Home</a></li>
              <li><a href="https://movingagain.com.au/contact-moving-again/" class="text-gray-300 hover:text-white transition-colors">Contact Us</a></li>
            </ul>
          </div>
          
          <div>
            <h3 class="text-lg font-bold mb-4">Contact Us</h3>
            <address class="not-italic text-gray-300 space-y-2">
              <p class="flex items-start">
                <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                3 / 31 Expansion Street<br>
                Molendinar<br>
                Gold Coast<br>
                Queensland 4216
              </p>
              <p class="flex items-center">
                <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <a href="tel:+610721432557" class="hover:text-white transition-colors">07 2143 2557</a>
              </p>

            </address>
          </div>
        </div>
        
        <div class="border-t border-gray-800 mt-8 pt-6 text-center text-gray-400">
          <p>&copy; {new Date().getFullYear()} Moving Again Car Transport. All rights reserved.</p>
        </div>
      </div>
    </footer>
    
    <!-- Mobile menu script -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (mobileMenuButton && mobileMenu) {
          mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
          });
        }
        
        // Close mobile menu when clicking outside
        document.addEventListener('click', (e) => {
          if (!mobileMenuButton.contains(e.target) && !mobileMenu.contains(e.target)) {
            mobileMenu.classList.add('hidden');
          }
        });
      });
    </script>
  </body>
</html>
