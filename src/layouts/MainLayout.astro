---
// src/layouts/MainLayout.astro
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Professional car transport services across Australia' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <!-- Primary Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    
    <!-- Canonical URL -->
    <link rel="canonical" href={new URL(Astro.url.pathname, 'https://cartransport.movingagain.com.au').toString()} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={new URL(Astro.url.pathname, 'https://cartransport.movingagain.com.au').toString()} />
    <meta property="og:title" content={`${title} | Moving Again Car Transport`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://cartransport.movingagain.com.au/images/og-image.jpg" />
    <meta property="og:site_name" content="Moving Again Car Transport" />
    <meta property="og:locale" content="en_AU" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={new URL(Astro.url.pathname, 'https://cartransport.movingagain.com.au').toString()} />
    <meta name="twitter:title" content={`${title} | Moving Again Car Transport`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://cartransport.movingagain.com.au/images/twitter-card.jpg" />
    
    <!-- Additional Meta Tags -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Moving Again Car Transport" />
    <meta name="theme-color" content="#1e40af" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.ico" sizes="32x32" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    
    <!-- Preload critical assets -->
    <link rel="preload" href="/images/logo.png" as="image" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Arvo:wght@400;700&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet" />
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Global CSS -->
    <link rel="stylesheet" href="/styles/global.css" />
    
    <!-- Schema.org structured data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "AutoTransport",
      "@id": "https://movingagain.com.au/#transport",
      "name": "Moving Again Car Transport",
      "image": "https://movingagain.com.au/images/logo.png",
      "description": "Professional car transport services across Australia. Safe, reliable, and affordable vehicle transportation.",
      "url": "https://movingagain.com.au",
      "telephone": "+610721432557",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "3/31 Expansion Street",
        "addressLocality": "Molendinar",
        "addressRegion": "QLD",
        "postalCode": "4214",
        "addressCountry": "AU"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": "-27.9672",
        "longitude": "153.3556"
      },
      "openingHoursSpecification": [
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday"
          ],
          "opens": "08:00",
          "closes": "17:00"
        }
      ],
      "sameAs": [
        "https://www.facebook.com/movingagainau/",
        "https://www.instagram.com/movingagainau/"
      ],
      "priceRange": "$$",
      "areaServed": {
        "@type": "Country",
        "name": "Australia"
      }
    }
    </script>
    
    <!-- Critical CSS -->
    <style>
      /* Critical CSS can be inlined here */
      .logo { height: 4rem; }
      .nav-link { position: relative; }
      .nav-link:hover { opacity: 0.8; }
      .nav-link.active { font-weight: 700; }
      
      /* Custom styles to match original site */
      .entry-content {
        line-height: 1.8;
        color: #333;
      }
      .entry-content h2 {
        font-size: 2rem;
        font-weight: 700;
        margin: 2rem 0 1.5rem;
        color: #1e40af;
      }
      .entry-content h3 {
        font-size: 1.5rem;
        font-weight: 600;
        margin: 1.8rem 0 1.2rem;
        color: #1e40af;
      }
      .entry-content h4 {
        font-size: 1.2rem;
        font-weight: 600;
        margin: 1.5rem 0 0.8rem;
        color: #1e40af;
      }
      .entry-content p {
        margin-bottom: 1.2rem;
      }
      .entry-content ul, .entry-content ol {
        margin: 1.2rem 0;
        padding-left: 2rem;
      }
      .entry-content li {
        margin-bottom: 0.5rem;
      }
      .faq-item {
        background: #fff;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      }
      .cta-section {
        background: #1e40af;
        color: white;
        padding: 2rem;
        border-radius: 8px;
        margin: 2rem 0;
        text-align: center;
      }
      .cta-section .button {
        display: inline-block;
        background: #ff6b00;
        color: white;
        padding: 0.8rem 1.8rem;
        border-radius: 4px;
        font-weight: 600;
        text-decoration: none;
        margin-top: 1rem;
        transition: background-color 0.3s;
      }
      .cta-section .button:hover {
        background: #e05a00;
      }
      @media (max-width: 768px) {
        .entry-content {
          padding: 0 1rem;
        }
      }
    </style>
  </head>

  <body class="min-h-screen flex flex-col font-['Arvo',serif] text-gray-800 bg-gray-100">
    <!-- Header -->
    <header class="bg-[#101827] text-white shadow-md">
      <div class="container mx-auto px-4">
        <div class="flex justify-between items-center py-6">
          <!-- Logo -->
          <a href="/" class="flex items-center space-x-3">
            <img src="/images/logo.png" alt="Moving Again" class="h-16 w-auto" width="64" height="64" />
            <div>
              <div class="text-xl font-bold text-white">Moving Again</div>
              <div class="text-base text-blue-200">Car Transport</div>
            </div>
          </a>
          
          <!-- Desktop Navigation -->
          <nav class="hidden md:flex space-x-8 items-center">
            <a href="/" class="nav-link text-white hover:text-blue-200 transition-colors text-lg">Home</a>
            <a href="https://movingagain.com.au/contact-moving-again/" class="nav-link text-white hover:text-blue-200 transition-colors text-lg">Contact Us</a>
            <a href="https://vehicles.movingagain.com.au/quote/multi-step?mtm_campaign=Standard_Vehicle_Quote&mtm_kwd=MACT" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-md transition-colors text-lg font-medium shadow-lg hover:shadow-xl">Get a Quote</a>
          </nav>
          
          <!-- Mobile menu button -->
          <button id="mobile-menu-button" class="md:hidden flex items-center text-white">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
          </button>
        </div>
      </div>
      
      <!-- Mobile Navigation -->
      <div id="mobile-menu" class="md:hidden bg-[#101827] text-white shadow-lg absolute w-full z-10 hidden">
        <div class="px-4 py-2 space-y-1">
            <a href="/" class="block py-2 hover:bg-gray-700 px-2 rounded">Home</a>
            <a href="https://movingagain.com.au/contact-moving-again/" class="block py-2 hover:bg-gray-700 px-2 rounded">Contact Us</a>
            <a href="https://vehicles.movingagain.com.au/quote/multi-step?mtm_campaign=Standard_Vehicle_Quote&mtm_kwd=MACT" class="block bg-blue-600 hover:bg-blue-700 text-white text-center py-3 rounded-md font-bold mt-2 shadow-lg hover:shadow-xl">Get a Quote</a>
        </div>
      </div>
    </header>
    
    <!-- Main Content -->
    <main class="flex-grow">
      <slot />
    </main>
    
    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="md:col-span-2">
            <div class="flex items-center space-x-2 mb-4">
              <img 
                src="/images/logo.png" 
                alt="Moving Again" 
                class="h-12 w-auto"
                width="48"
                height="48"
                loading="lazy"
              />
              <span class="text-xl font-bold font-serif">Moving Again</span>
            </div>
            <p class="text-gray-300 mb-4">
              Professional car transport services across Australia. Safe, reliable, and affordable vehicle transportation.
            </p>
            <div class="flex space-x-4">
              <!-- Social links can be added here -->
            </div>
          </div>
          
          <div>
            <h3 class="text-lg font-bold mb-4">Quote Types</h3>
            <ul class="space-y-2">
              <li><a href="https://vehicles.movingagain.com.au/quote/multi-step?mtm_campaign=Standard_Vehicle_Quote&mtm_kwd=MACT" class="text-gray-300 hover:text-white transition-colors">Standard Car Transport</a></li>
              <li><a href="https://vehicles.movingagain.com.au/quote-types?mtm_campaign=Non_Standard_Vehicle_Quote&mtm_kwd=MACT" class="text-gray-300 hover:text-white transition-colors">Non-Standard Vehicle</a></li>
            </ul>
          </div>
          

          <div>
            <h3 class="text-lg font-bold mb-4">Contact Us</h3>
            <address class="not-italic text-gray-300 space-y-2">
              <p class="flex items-start">
                <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                3/31 Expansion Street<br>
                Molendinar QLD<br>
                4214
              </p>
              <p class="flex items-center">
                <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <a href="tel:+610721432557" class="hover:text-white transition-colors">07 2143 2557</a>
              </p>

            </address>
          </div>
        </div>
        
        <div class="border-t border-gray-800 mt-8 pt-6 text-center text-gray-400">
          <p>&copy; {new Date().getFullYear()} Moving Again Car Transport. All rights reserved.</p>
        </div>
      </div>
    </footer>
    
    <!-- Mobile menu script -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (mobileMenuButton && mobileMenu) {
          mobileMenuButton.addEventListener('click', () => {
            // Toggle the menu visibility
            mobileMenu.classList.toggle('hidden');
            
            // Update ARIA attributes
            const expanded = mobileMenu.classList.contains('hidden') ? 'false' : 'true';
            mobileMenuButton.setAttribute('aria-expanded', expanded);
            
            // Toggle between hamburger and close icon
            const menuIcon = mobileMenuButton.querySelector('svg path');
            if (menuIcon) {
              if (expanded === 'true') {
                menuIcon.setAttribute('d', 'M6 18L18 6M6 6l12 12');
              } else {
                menuIcon.setAttribute('d', 'M4 6h16M4 12h16m-7 6h7');
              }
            }
          });
        }
        
        // Close mobile menu when clicking outside
        document.addEventListener('click', (e) => {
          if (mobileMenuButton && mobileMenu && 
              !mobileMenuButton.contains(e.target) && 
              !mobileMenu.contains(e.target)) {
            mobileMenu.classList.add('hidden');
          }
        });
      });
    </script>
  </body>
</html>
